{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@salvachll/client/data-access": ["libs/client/data-access/src/index.ts"],
      "@salvachll/client/feature-dashboard": [
        "libs/client/feature-dashboard/src/index.ts"
      ],
      "@salvachll/client/ui-components": [
        "libs/client/ui-components/src/index.ts"
      ],
      "@salvachll/server/data-access-todo": [
        "libs/server/data-access-todo/src/index.ts"
      ],
      "@salvachll/server/feature-todo": [
        "libs/server/feature-todo/src/index.ts"
      ],
      "@salvachll/server/feature-user": [
        "libs/server/feature-user/src/index.ts"
      ],
      "@salvachll/server/utils": ["libs/server/utils/src/index.ts"],
      "@salvachll/shared/domain": ["libs/shared/domain/src/index.ts"],
      "@salvachll/utils": ["libs/utils/src/index.ts"]
    },
    "strict": true
  },
  "exclude": ["node_modules", "tmp"]
}
